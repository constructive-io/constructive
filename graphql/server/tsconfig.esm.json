{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist/esm",
    "module": "es2022",
    "moduleResolution": "bundler",
    "rootDir": "src/",
    "declaration": false
  },
  "exclude": [
    "dist",
    "node_modules",
    "**/*.spec.*",
    "**/*.test.*",
    "src/plugins/**/*",
    "src/schema.ts",
    "src/scripts/**/*",
    "src/middleware/gql.ts"
  ]
}
