{
  "name": "graphile-test",
  "version": "4.0.0",
  "description": "PostGraphile v5 Testing Utilities - GraphQL integration testing with isolated databases",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./utils": {
      "import": "./dist/utils.js",
      "require": "./dist/utils.js",
      "types": "./dist/utils.d.ts"
    }
  },
  "homepage": "https://github.com/constructive-io/constructive",
  "repository": {
    "type": "git",
    "url": "https://github.com/constructive-io/constructive"
  },
  "bugs": {
    "url": "https://github.com/constructive-io/constructive/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint . --fix",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "testing",
    "graphql",
    "graphile",
    "postgraphile",
    "v5",
    "postgresql",
    "test"
  ],
  "author": "Constructive <developers@constructive.io>",
  "license": "MIT",
  "dependencies": {
    "grafast": "^1.0.0-rc.4",
    "graphile-build": "^5.0.0-rc.3",
    "graphile-build-pg": "^5.0.0-rc.3",
    "graphile-config": "1.0.0-rc.3",
    "pg": "^8.17.1",
    "postgraphile": "^5.0.0-rc.4"
  },
  "devDependencies": {
    "@types/node": "^22.19.1",
    "@types/pg": "^8.16.0",
    "graphql-tag": "^2.12.6",
    "typescript": "^5.7.0",
    "vitest": "^4.0.18"
  },
  "peerDependencies": {
    "graphql": "^16.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
